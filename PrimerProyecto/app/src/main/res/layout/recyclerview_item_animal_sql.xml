<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAnimal"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivAnimalPictureSql"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:layout_width="70dp"
                android:layout_height="70dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ivAnimalPictureSql"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtIdAnimal"
                    android:fontFamily="@font/bombgw"
                    tools:text="id"
                    android:textColor="@color/red"
                    android:layout_marginStart="20dp"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtCardNameAnimal"
                    android:fontFamily="@font/bombgw"
                    tools:text="Nombre del animal"
                    android:textColor="@color/red"
                    android:layout_marginStart="20dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtUrlImage"
                    tools:text="url"
                    android:textColor="@color/red"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>