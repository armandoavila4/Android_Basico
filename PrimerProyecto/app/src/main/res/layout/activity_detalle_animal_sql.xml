<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ejercicio_final.almacenamiento.DetalleAnimalSqlActivity">

    <TextView
        android:id="@+id/txtTitleDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="InformaciÃ³n"
        android:background="@color/purple_200"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/ivImageDetalleSql"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/txtNameDetalleSql"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="Nombre:"/>

    <EditText
        android:id="@+id/etNameDetalleSql"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txtUrlDetalleSql"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:text="Url:"/>

    <EditText
        android:id="@+id/etUrlDetalleSql"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp">

        <Button
            android:id="@+id/btAddAnimalSql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Agregar"/>

        <Button
            android:id="@+id/bteditAnimalSql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Editar"/>

        <Button
            android:id="@+id/btDeleteAnimalSql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Eliminar"/>

    </LinearLayout>

</LinearLayout>